generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id
  name      String?
  createdAt DateTime @default(now())
  threads   Thread[]
}

model Thread {
  id          String    @id
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  pageUrl     String
  selector    String
  xPercent    Float
  yPercent    Float
  offsetRatioX Float?
  offsetRatioY Float?
  status      String    @default("OPEN") // OPEN | RESOLVED (SQLite has no enums)
  createdBy   String
  createdAt   DateTime  @default(now())
  resolvedBy  String?
  resolvedAt  DateTime?
  assignedTo  String?
  assignedBy  String?
  assignedAt  DateTime?
  comments    Comment[]

  @@index([projectId, pageUrl])
}

model Comment {
  id        String   @id
  threadId  String
  thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
  body      String
  createdBy String
  createdAt DateTime @default(now())
}

model ActivityLog {
  id        String   @id @default(uuid())
  projectId String
  threadId  String?
  type      String
  message   String
  meta      String?  // JSON string
  createdAt DateTime @default(now())

  @@index([projectId])
}
